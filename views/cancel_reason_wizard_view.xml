<odoo>
  <record id="view_cancel_reason_wizard_form" model="ir.ui.view">
    <field name="name">cancel.reason.wizard.form</field>
    <field name="model">cancel.reason.wizard</field>
    <field name="arch" type="xml">
      <form string="Motif d’annulation" version="19.0">
        <group>
          <field name="reason" placeholder="Expliquez la raison de l’annulation..."/>
        </group>
        <footer>
          <button name="confirm_cancel"
                  string="Confirmer l’annulation"
                  type="object"
                  class="btn-danger"/>
          <button string="Annuler" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
