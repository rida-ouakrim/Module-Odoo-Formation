<odoo>
  <!-- Export CSV -->
  <record id="action_export_sessions_csv" model="ir.actions.server">
    <field name="name">Exporter en CSV</field>
    <field name="model_id" ref="model_academy_session"/>
    <field name="state">code</field>
    <field name="binding_model_id" ref="model_academy_session"/>
    <field name="binding_type">action</field>
    <field name="code">
action = records.action_export_csv()
    </field>
  </record>

  <!-- Export XLS -->
  <record id="action_export_sessions_xls" model="ir.actions.server">
    <field name="name">Exporter en Excel</field>
    <field name="model_id" ref="model_academy_session"/>
    <field name="state">code</field>
    <field name="binding_model_id" ref="model_academy_session"/>
    <field name="binding_type">action</field>
    <field name="code">
action = records.action_export_xls()
    </field>
  </record>
</odoo>
